---
import { $profiles } from '../stores/profile'
console.log('PROFILES', $profiles.get())

/* Build frame embed. */
const frameEmbed = {
    version: 'next',
    imageUrl: 'https://miniapps.party/poster.webp',
    button: {
        title: 'New + Noteworthy Mini Apps',
        action: {
            type: 'launch_frame',
            name: 'Mini Apps Party',
            url: 'https://miniapps.party',
            splashImageUrl: 'https://miniapps.party/splash.gif',
            splashBackgroundColor: '#21223e'
        }
    }
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="fc:frame" content={JSON.stringify(frameEmbed)} />

		<title>Mini Apps Party</title>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			main::-webkit-scrollbar {
				width: 4px;
				height: 8px;
				background-color: #763a6d;
			}
			main::-webkit-scrollbar-thumb {
				background: #d922be;
			}
		</style>
	</head>
	<body class="bg-white w-screen h-screen">
		<slot />
		<script async src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
	</body>
</html>
